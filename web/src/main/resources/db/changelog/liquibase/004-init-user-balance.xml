<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="init_user_balance" author="roman">
        <preConditions onFail="WARN">
            <tableExists tableName="user_balance"/>
        </preConditions>
        <createTable tableName="user_balance">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_balance_user_id" referencedTableName="users" referencedColumnNames="id" deleteCascade="false"/>
            </column>
            <column name="balance" type="number">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="uidx_user_balance_user_id" tableName="user_balance" unique="true">
            <column name="user_id"/>
        </createIndex>
        <rollback>
            <dropTable tableName="user_balance"/>
        </rollback>
    </changeSet>
</databaseChangeLog>